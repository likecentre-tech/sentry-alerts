{
  "compilerOptions": {
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "target": "es2018",
    "lib": [
      "esnext"
    ],
    "outDir": "dist",
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*"
  ]
}